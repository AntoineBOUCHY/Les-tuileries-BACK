<!-- ***** Projects Area Starts ***** -->
    <section class="section" id="projects">
      <div class="container">
        
           
                <div class="section-heading">
                    <h6>Evénements</h6>
                    <h2></h2>
                </div>
                <div class="filters">
                <p>Retrouvez nos toutes dernières actualités</p>
                </div>
           
            <div id="news"> {% for news in allNews %}
                <div style="margin: 32px 8px; border-radius: 8px;  padding: 16px; ;box-shadow: 0 2px 15px rgba(0, 0, 0, 0.3);">
                    <div style=" margin-bottom: 12px;">
                        <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                            <img src="assets/images/logo.jpg" alt="Logo de la publication" width="35" height="35"style="border-radius: 50%; margin-right: 12px;">
                                <p style="margin-right: 0; font-size: 14px; color: #777;">Le {{ news.publishedAt ? news.publishedAt|date('d/m/Y') : '' }}</p>
                        </div>
                        <div>
                            <h3 style="margin: 0; font-size: 18px; color:#b7b7b7;">{{ news.content }}</h3>
                        </div>
                    </div>
                    {% for picture in news.pictures %}
                    <img src="{{ asset('assets/images/') }}{{picture.path}}" alt="Image de la publication" style="width: 100%; margin-bottom: 12px;border-radius: 5px;">
                    {% endfor %}
                    <hr style="border: none; border-top: 1px solid #ddd; margin-bottom: 12px;">
                    <a target="_blank" href="https://www.facebook.com/brasserieslestuileries"><button style="background-color: #606060; color: #fff; border: none; border-radius: 4px; padding: 8px 16px;">Voir la publication</button></a>
                </div>

                {% endfor %}
                
            </div>
        
                
            </div>
            
    </section>
   
